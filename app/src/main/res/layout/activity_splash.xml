<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/splashImgView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@mipmap/liber_launcher" />

    <TextView
        android:id="@+id/splashAppName"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@id/splashImgView"
        android:layout_centerHorizontal="true"
        android:paddingLeft="18dp"
        android:text="Liber"
        android:textColor="@color/black"
        android:textSize="70dp"
        android:textStyle="bold|italic" />
    <TextView
        android:layout_below="@id/splashAppName"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:text="@string/tag_line"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:paddingLeft="18dp"
        />

    <ProgressBar
        android:id="@+id/splashProgressBarId"
        style="?android:attr/progressBarStyle"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:indeterminateTint="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="113dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.2.0 beta"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
