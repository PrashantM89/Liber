<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground"
    android:id="@+id/card_view_review_id">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/reviewer_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:textColor="@color/black_translucent_50"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    android:id="@+id/reviewer_ratingbar_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:drawableRight="@drawable/ic_star_rating"
                    android:gravity="right|end"
                    android:textColor="@color/black_translucent_50"
                    android:text="0.0 "
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/reviewer_review_txt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User review"
                android:textColor="@color/black_translucent_50"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>