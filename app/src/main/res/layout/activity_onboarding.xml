<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/slideViePagerId"
        android:layout_width="match_parent"
        android:layout_height="630dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/dotsLayoutId"
        android:layout_above="@+id/got_it_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_centerInParent="true"
        >

    </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/got_it_id"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_draw"/>

</RelativeLayout>