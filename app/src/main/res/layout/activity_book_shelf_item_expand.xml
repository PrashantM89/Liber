<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookShelfItemExpandActivity">
    <View
        android:id="@+id/background_view_id"
        android:layout_width="match_parent"
        android:layout_height="240dp"         />

    <LinearLayout
        android:id="@+id/rl_two_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/rent_book_img_cover"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:transitionName="bookCoverTN"
            tools:src="@drawable/book_placeholder" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/cv_one_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="240dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#fcfcfc"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/expand_book_title_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:transitionName="bookTitleTN"
                        android:gravity="center"
                        style="@style/Liber.TextView.Heading"
                        android:textAlignment="center"
                        />

                    <LinearLayout
                        android:id="@+id/return_btn_layout_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="visible">
                        <Button
                            android:id="@+id/return_btn_id"
                            android:textColor="@color/white"
                            android:background="@color/primary_500"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:text="Return Book"
                            android:textAllCaps="false"/>
                        <!--<Button-->
                            <!--android:layout_weight="1"-->
                            <!--android:id="@+id/button2"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Button" />-->

                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:layout_gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/book_review_text"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:inputType="text|textMultiLine"
                        android:gravity="top"
                        android:padding="10dp"
                        android:shadowColor="@color/inactive"
                        android:background="@drawable/review_edittxt_border"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:maxLength="250"
                        android:hint="Rate and tell us something about this book or author."
                        android:typeface="serif"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/submit_review_btn_id"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Submit"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:elevation="15dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>